<%- include('partials/_head') %>

<link
  href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap"
  rel="stylesheet"
/>

<style>
  body {
    background: #e8f5e9;
    font-family: "Quicksand", Arial, sans-serif;
    margin: 0;
    min-height: 100vh;
  }
  .hero {
    text-align: center;
    margin: 40px 0 32px 0;
  }
  .logo-bg {
    display: inline-block;
    background: linear-gradient(135deg, #a5d6a7 60%, #fffde4 100%);
    border-radius: 50%;
    padding: 18px;
    box-shadow: 0 2px 8px rgba(56, 142, 60, 0.1);
    margin-bottom: 12px;
  }
  .hero img {
    width: 90px;
    border-radius: 50%;
    background: transparent;
    border: none;
    display: block;
  }
  .hero h1 {
    color: #388e3c;
    font-size: 2em;
    margin: 0 0 8px 0;
    font-weight: 700;
  }
  .hero p {
    color: #4caf50;
    font-size: 1.1em;
    margin: 0;
  }
  .categories {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 24px;
    margin: 0 0 48px 0;
  }
  .category-card {
    background: #fff;
    border-radius: 14px;
    box-shadow: 0 2px 8px rgba(56, 142, 60, 0.08);
    padding: 18px 12px 14px 12px;
    text-align: center;
    width: 170px;
    border: 1.5px solid #c8e6c9;
    transition: box-shadow 0.18s, border-color 0.18s, transform 0.18s;
  }
  .category-card:hover {
    box-shadow: 0 6px 18px rgba(56, 142, 60, 0.13);
    border-color: #81c784;
    transform: translateY(-6px) scale(1.03);
  }
  .category-card img {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 10px;
    margin-bottom: 10px;
    background: #f0f0f0;
    border: 1.5px solid #a5d6a7;
  }
  .category-card h3 {
    margin: 0;
    font-size: 1.08em;
    color: #388e3c;
    font-weight: 700;
    letter-spacing: 0.2px;
  }
  .category-card a {
    display: inline-block;
    margin-top: 10px;
    color: #fff;
    background: #43a047;
    padding: 6px 16px;
    border-radius: 14px;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.98em;
    transition: background 0.15s;
  }
  .category-card a:hover {
    background: #388e3c;
  }
</style>

<div class="hero">
  <span class="logo-bg">
    <img src="/images/logo.png" alt="Flora Fauna Logo" />
  </span>
  <h1>Flora & Fauna Nusantara</h1>
  <p>Eksplorasi keindahan alam Indonesia</p>
</div>

<div class="categories">
  <% category.forEach(function(cat) { %>
  <div class="category-card">
    <img
      src="/images/<%= cat.nama.toLowerCase() %>.jpg"
      alt="<%= cat.nama %>"
      onerror="this.onerror=null;this.src='/images/flow.jpg';"
    />
    <h3><%= cat.nama %></h3>
    <a href="/kategori/<%= cat.id_cat %>">Lihat Koleksi</a>
  </div>
  <% }) %>
</div>

<%- include('partials/_foot') %>
